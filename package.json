{
  "name": "tailwind-css-project",
  "version": "1.0.0",
  "description": "A modern website built with Tailwind CSS v3",
  "main": "index.html",
 "scripts": {
  "clean": "rimraf dist",
  "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
  "copy:assets": "cpr index.html dist -o && cpr images dist/images -o",
  "build": "npm-run-all clean copy:assets build:css",
  "dev": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch"
},
  "keywords": [
    "tailwind",
    "css",
    "responsive",
    "modern"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cpr": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.0"
  }
}
